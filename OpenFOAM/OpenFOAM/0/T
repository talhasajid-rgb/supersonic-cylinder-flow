{
    inlet
    {
        type            fixedValue;    
        value           uniform 300;
    }

    outlet
    {
        type            zeroGradient;  
    }

    topfarfield
    {
        type            zeroGradient;
    }

    bottomfarfield
    {
        type            zeroGradient;
    }

    hot_cylinder
    {
        type            zeroGradient;  
    }

    frontAndBackPlanes
    {
        type            empty;
    }
}

